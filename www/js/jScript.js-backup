function popNotification(obj){
	var data = new Object();
	currentLocation(function(lat,lon){
		data["lat1"]=lat;
		data["lon1"]=lon;		
		for(var i=0;i<obj.length;i++){
			data["lat2"] = obj[i].latitude
			data["lon2"] = obj[i].longitude
			var distance = getDistance(data);
			if(distance>obj[i].distance){
				localNotification();
			}
		}	
	});
}

function currentLocation(callback){

	if(navigator.geolocation){
		navigator.geolocation.getCurrentPosition(function(position){
			CURRENT_LATITUDE = position.coords.latitude;
			CURRENT_LONGITUDE = position.coords.longitude;
			callback(CURRENT_LATITUDE,CURRENT_LONGITUDE);
		},function(err){ alert(err);});
	}else{
		alert("navigator.geolocation is not available");
	}
}

function getDistance(data){

	var lat1 = data.lat1;
	var lon1 = data.lon1;
	var lat2 = data.lat2;
	var lon2 = data.lon2;
	var R = 6371e3; // metres
	var l1 = (lat1*22)/(180*7);
	var l2 = (lat2*22)/(180*7);
	var l1l2 = ((lat2-lat1)*22)/(180*7);
	var lng1lng2 = ((lon2-lon1)*22)/(180*7);

	var a = Math.sin(l1l2/2) * Math.sin(l1l2/2) +
	        Math.cos(l1) * Math.cos(l2) *
	        Math.sin(lng1lng2/2) * Math.sin(lng1lng2/2);
	var c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
	var d = R * c;
	return d;
}

