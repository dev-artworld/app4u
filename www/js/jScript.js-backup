		async:true,
		beforeSend:function(){
			myApp.showPreloader();
		},
		success:function(res){
			var data = JSON.parse(res);
			console.log(data);
			if(!data.error){
				localStorage.setItem("uid",data.user);
				loadleftpanel();
				getAllDeviceSettings();
				getDeviceToken();
